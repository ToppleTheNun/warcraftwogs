{
  "name": "warcraft-wogs",
  "author": "Richard Harrah",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@8.14.0",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsx scripts/generate-env.ts && remix build --sourcemap",
    "dev": "tsx scripts/generate-env.ts && remix dev",
    "gql": "nr gql:introspection && nr gql:generate",
    "gql:generate": "graphql-codegen --config codegen.yml && prettier --write app/wcl/types.ts && prettier --write schema.json && prettier --write app/wcl/gql/schema.graphql",
    "gql:introspection": "tsx -r dotenv/config app/wcl/queries/introspection.ts",
    "lint": "eslint app && prettier -c app",
    "lint:fix": "eslint --fix app && prettier --write app",
    "prepare": "prisma generate",
    "prisma": "nr prisma:generate && nr prisma:migrate && nr prisma:seed",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push",
    "prisma:seed": "prisma db seed",
    "start": "tsx scripts/generate-env.ts && remix-serve build",
    "typecheck": "tsc",
    "vercel-build": "nr prisma:generate && nr prisma:deploy && nr build && sentry-upload-sourcemaps && rimraf build/*.map && rimraf public/build/*.map && rimraf public/build/**/*.map && tsx scripts/bust-leaderboard-cache.ts"
  },
  "dependencies": {
    "@conform-to/dom": "0.9.1",
    "@conform-to/react": "0.9.1",
    "@conform-to/zod": "0.9.1",
    "@prisma/client": "5.7.1",
    "@react-types/shared": "3.22.0",
    "@remix-run/css-bundle": "2.4.1",
    "@remix-run/node": "2.4.1",
    "@remix-run/react": "2.4.1",
    "@remix-run/router": "1.14.1",
    "@remix-run/serve": "2.4.1",
    "@sentry/remix": "7.91.0",
    "@upstash/redis": "1.27.1",
    "@vercel/analytics": "1.1.1",
    "@vercel/remix": "2.4.1",
    "class-variance-authority": "0.7.0",
    "clsx": "2.1.0",
    "date-fns": "3.0.6",
    "dotenv": "16.3.1",
    "graphql": "16.8.1",
    "graphql-request": "6.1.0",
    "graphql-tag": "2.12.6",
    "immer": "10.0.3",
    "isbot": "4.1.1",
    "kleur": "4.1.5",
    "lodash": "4.17.21",
    "lucide-react": "0.303.0",
    "react": "18.2.0",
    "react-aria": "3.31.0",
    "react-dom": "18.2.0",
    "react-stately": "3.29.0",
    "tailwind-merge": "2.2.0",
    "tailwindcss-animate": "1.0.7",
    "web-vitals": "3.5.1",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@antfu/ni": "0.21.12",
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/introspection": "4.0.0",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-graphql-request": "6.1.0",
    "@graphql-codegen/typescript-operations": "4.0.1",
    "@remix-run/dev": "2.4.1",
    "@remix-run/eslint-config": "2.4.1",
    "@tailwindcss/typography": "0.5.10",
    "@types/lodash": "4.14.202",
    "@types/node": "20.10.6",
    "@types/react": "18.2.46",
    "@types/react-dom": "18.2.18",
    "@vitejs/plugin-react": "4.2.1",
    "autoprefixer": "10.4.16",
    "eslint": "8.56.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "jsdom": "23.0.1",
    "ofetch": "1.3.3",
    "prettier": "3.1.1",
    "prettier-plugin-pkg": "0.18.0",
    "prettier-plugin-tailwindcss": "0.5.10",
    "prisma": "5.7.1",
    "rimraf": "5.0.5",
    "tailwindcss": "3.4.1",
    "tsconfig-paths": "4.2.0",
    "tsx": "4.7.0",
    "typescript": "5.3.3",
    "vite": "5.0.10",
    "vitest": "1.1.1",
    "vitest-tsconfig-paths": "3.4.1"
  },
  "sideEffects": false,
  "graphql": {
    "schema": "./schema.json"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-pkg",
      "prettier-plugin-tailwindcss"
    ]
  },
  "prisma": {
    "seed": "tsx --require dotenv/config --require tsconfig-paths/register prisma/seed.ts"
  }
}
