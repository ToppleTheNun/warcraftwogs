{
  "name": "warcraft-wogs",
  "author": "Richard Harrah",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@8.5.0",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "tsx scripts/generate-env.ts && remix build --sourcemap",
    "dev": "tsx scripts/generate-env.ts && remix dev",
    "gql": "nr gql:introspection && nr gql:generate",
    "gql:generate": "graphql-codegen --config codegen.yml && prettier --write app/wcl/types.ts && prettier --write schema.json && prettier --write app/wcl/gql/schema.graphql",
    "gql:introspection": "tsx -r dotenv/config app/wcl/queries/introspection.ts",
    "lint": "eslint app && prettier -c app",
    "lint:fix": "eslint --fix app && prettier --write app",
    "prepare": "prisma generate",
    "prisma": "nr prisma:generate && nr prisma:migrate && nr prisma:seed",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push",
    "prisma:seed": "prisma db seed",
    "start": "tsx scripts/generate-env.ts && remix-serve build",
    "typecheck": "tsc",
    "vercel-build": "nr prisma:generate && nr prisma:deploy && nr build && sentry-upload-sourcemaps && rimraf build/*.map && rimraf public/build/*.map && rimraf public/build/**/*.map && tsx scripts/bust-leaderboard-cache.ts"
  },
  "dependencies": {
    "@conform-to/dom": "0.6.3",
    "@conform-to/react": "0.6.3",
    "@conform-to/zod": "0.6.3",
    "@prisma/client": "4.14.1",
    "@react-types/shared": "3.18.1",
    "@remix-run/css-bundle": "1.16.1",
    "@remix-run/node": "1.16.1",
    "@remix-run/react": "1.16.1",
    "@remix-run/router": "1.6.2",
    "@remix-run/serve": "1.16.1",
    "@sentry/remix": "7.53.1",
    "@upstash/redis": "1.20.6",
    "@vercel/analytics": "1.0.1",
    "@vercel/remix": "1.16.1",
    "clsx": "1.2.1",
    "date-fns": "2.30.0",
    "dotenv": "16.0.3",
    "graphql": "16.6.0",
    "graphql-request": "5.1.0",
    "graphql-tag": "2.12.6",
    "immer": "10.0.2",
    "isbot": "3.6.10",
    "kleur": "4.1.5",
    "lodash": "4.17.21",
    "lucide-react": "0.221.0",
    "react": "18.2.0",
    "react-aria": "3.25.0",
    "react-dom": "18.2.0",
    "react-stately": "3.23.0",
    "web-vitals": "3.3.1",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@antfu/ni": "0.21.3",
    "@graphql-codegen/cli": "3.3.1",
    "@graphql-codegen/introspection": "3.0.1",
    "@graphql-codegen/typescript": "3.0.4",
    "@graphql-codegen/typescript-graphql-request": "4.5.9",
    "@graphql-codegen/typescript-operations": "3.0.4",
    "@remix-run/dev": "1.16.1",
    "@remix-run/eslint-config": "1.16.1",
    "@types/lodash": "4.14.194",
    "@types/node": "^18",
    "@types/prettier": "2.7.2",
    "@types/react": "18.2.7",
    "@types/react-dom": "18.2.4",
    "@vitejs/plugin-react": "4.0.0",
    "eslint": "8.41.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "jsdom": "22.0.0",
    "ofetch": "1.0.1",
    "prettier": "2.8.8",
    "prettier-plugin-pkg": "0.17.1",
    "prettier-plugin-tailwindcss": "0.3.0",
    "prisma": "4.14.1",
    "rimraf": "5.0.1",
    "tailwindcss": "3.3.2",
    "tsconfig-paths": "4.2.0",
    "tsx": "3.12.7",
    "typescript": "5.0.4",
    "vite": "4.3.8",
    "vitest": "0.31.1",
    "vitest-tsconfig-paths": "3.4.1"
  },
  "sideEffects": false,
  "graphql": {
    "schema": "./schema.json"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-pkg",
      "prettier-plugin-tailwindcss"
    ]
  },
  "prisma": {
    "seed": "tsx --require dotenv/config --require tsconfig-paths/register prisma/seed.ts"
  }
}
